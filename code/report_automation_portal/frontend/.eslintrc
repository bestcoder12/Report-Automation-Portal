{
  "extends": [
    "react-app",
    "react-app/jest",
    "plugin:jest-dom/recommended",
    "airbnb",
    "prettier"
  ],
  "plugins": ["jest", "jest-dom", "prettier"],
  "env": {
    "es6": true,
    "jest/globals": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-console": "off",
    "prettier/prettier": ["error", { "singleQuote": true }],
    "import/extensions": [
      "error",
      {
        "js": "ignorePackages",
        "mjs": "ignorePackages"
      }
    ],
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off"
  }
}
